<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <!--2022/2/16(debug)-->
      <%#= render 'users/info' %>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <!--2022/2/16(debug)-->
      <%#= render 'form', book: @book %>
      <%= render 'form', book: @new_book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <!--画像サイズを100x100から50x50に変更-->
            <%= image_tag @book.user.get_profile_image, size:"50x50" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <!--いいね機能の追加(2022/2/17)-->
          <td><%= render 'favorites/favorite', book: @book %></td>
          <!--コメント数を表示-->
          <td>コメント数<%= @book.book_comments.count %></td>
          <!--2022/2/16(debug)-->
          <% if @user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% end %>
        </tr>
      </table>
      <!--全コメントを表示-->
      <h2>Comment</h2>
      <table class="table-borderless mb-3">
        <% @book.book_comments.each do |book_comment| %>
          <tr>
            <td><%= link_to(book_comment.user) do %>
                <%= image_tag book_comment.user.get_profile_image, size:"50x50" %><br>
                <%= book_comment.user.name %>
              <% end %>
            </td>
            <td><%= book_comment.comment %></td>
            <%if book_comment.user == current_user %>
              <td><%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        <% end %>
      </table>
      <!--コメントフォーム-->
      <%= form_with model: [@book, @book_comment], local: true do |f| %>
        <%= f.text_area :comment, rows: '2', class: "form-control form-control-lg"%><br>
        <%= f.submit "送信" %>
      <% end %>
    </div>
  </div>
</div>